@page
@model RReviews.Pages.Register.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>LoginViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginViewModel.Email" class="control-label"></label><br />
                <input asp-for="LoginViewModel.Email" class="form-control"/>
                <span asp-validation-for="LoginViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginViewModel.Password" class="control-label"></label><br />
                <input asp-for="LoginViewModel.Password" class="form-control"/>
                <span asp-validation-for="LoginViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginViewModel.RememberMe" class="control-label"></label><br />
                <input asp-for="LoginViewModel.RememberMe" class="form-check-input"/>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Войти" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
