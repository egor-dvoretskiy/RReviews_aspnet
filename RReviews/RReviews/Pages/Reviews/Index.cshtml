@page
@using RReviews.Enum
@model RReviews.Pages.Reviews.IndexModel

@{
    ViewData["Title"] = "List of reviews";
}

<h1>List of reviews</h1>
<br/>

<form>
    <p>
        <select asp-for="ReviewType" asp-items="Model.Types">
            <option value="">All</option>
        </select>
        Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>
                #
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].TestingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].ReviewTypeObject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Review[0].ReviewRating)
            </th>
            <th>
                Control
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Review)
        {        
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <a asp-area="" asp-page="./Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TestingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewTypeObject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewRating)
                </td>
                <td>
                    <a asp-area="" asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-area="" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
  </tbody>
</table>