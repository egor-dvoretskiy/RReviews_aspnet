@page
@model RReviews.Pages.Reviews.DetailsModel

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Details of #@Model.Review.Id's review</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.ObjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.ObjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.ReviewTypeObject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.ReviewTypeObject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.TestingDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.TestingDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.Cost)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.Cost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Review.ReviewRating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Review.ReviewRating)
        </dd>
        <dt class="col-sm-2">
            Image
        </dt>
        <dd class="col-sm-10">
            <div class="img-container">                
                <img src="@(Model.Image.RelativePath)"/>
            </div>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Review.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
